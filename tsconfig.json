{
	"compileOnSave": true,
  "compilerOptions":
  {
  	"lib": [ "ES6", "dom" ],
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"outDir": "build",
		"resolveJsonModule": false,
		"strict": true,
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitAny" : true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [ "lib/**/*" ]
}
